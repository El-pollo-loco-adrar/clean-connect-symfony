{# Page de connexion #}
{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="flex justify-center py-10 dark:bg-gray-900 transition-colors">
    <div class="w-full max-w-md mx-4 bg-[#F3F4F6] shadow-xl border border-black dark:border-gray-700 rounded-2xl p-8">

        {# ---LOGO--- #}
        <div class="flex justify-center mb-8">
            <img src="{{ asset('img/logo.png') }}" alt="Logo du site" class="h-24">
        </div>

        {# ---TITRE--- #}
        <div class="flex justify-center border-2 border-black bg-[#3B82F6] bg-opacity-15 dark:border-gray-600 dark:bg-gray-700 rounded-lg p-2 mb-12">
            <h1 class="text-3xl font-semibold dark:text-white ">Connexion</h1>
        </div>
        
        <form method="post">
            {% if error %}
                <div class="mb-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded-lg text-sm">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 text-sm text-gray-600 text-center">
                    Vous êtes connecté en tant que <span class="font-bold"> {{ app.user.userIdentifier }}</span>,
                    <a href="{{ logout_path() }}" class="text-blue-600 underline">Deconnexion</a>
                </div>
            {% endif %}
            <div class="space-y-4">
                {# ---EMAIL--- #}
                <label for="inputEmail" class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 mb-2">Mon email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" 
                        class="w-full px-4 py-2 rounded-lg border border-black bg-[#3B82F6] bg-opacity-15 dark:border-gray-600 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 outline-none transition" 
                        autocomplete="email" required autofocus placeholder="votre@email.com">

                {# ---MOT DE PASSE--- #}
                <label for="inputPassword" class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 mb-2 ">Mon mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="w-full px-4 py-2 rounded-lg border border-black bg-[#3B82F6] bg-opacity-15 dark:border-gray-600 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 outline-none transition" autocomplete="current-password" required placeholder="••••••••">

                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                {# ---CHECKBOX SOUVENIR--- #}
                <div class="flex items-center gap-2">
                    <input type="checkbox" name="_remember_me" id="_remember_me" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                    <label for="_remember_me" class="text-sm text-gray-700  cursor-pointer">
                        Se souvenir de moi
                    </label>
                </div>

                {# --- BOUTON SUBMIT --- #}
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 text-white font-bold py-3 rounded-lg shadow-lg dark:shadow-blue-900/20 transform transition hover:scale-[1.02] active:scale-95">
                    Se connecter
                </button>
            </div>
        </form>
        <p class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 mt-8">
            Je n'ai pas de compte ? <a href="{{ path('app_register') }}" class="text-blue-600 font-semibold hover:underline">Je m'inscris</a>
        </p>

    </div>
</div>

{% endblock %}
