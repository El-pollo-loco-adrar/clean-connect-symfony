{# Le candidat peut voir les missions disponibles dans son secteur #}
{% extends 'base.html.twig' %}

{% block title %}Missions disponibles{% endblock %}

{% block body %}
{# On change min-h-screen par h-auto et on retire items-center pour coller au haut de page #}
<div class="flex justify-center h-auto dark:bg-gray-900 py-10 transition-colors">
    <div class="w-full max-w-6xl mx-4 bg-[#F3F4F6] shadow-xl border border-black dark:border-gray-700 rounded-2xl p-8">

        <h1 class="text-2xl font-bold text-center text-gray-800">Missions dans mon secteur</h1>
        <hr class="border-t-2 border-black my-6 mx-auto w-1/2 md:w-1/4" />

        {# Grille de missions #}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for mission in missions %}
                <div class="bg-white border border-black rounded-xl p-6 flex flex-col hover:shadow-none transition-all">
                    
                    {# TITRE + LIEU #}
                    <div class="flex justify-between items-start mb-4 gap-2">
                        <h2 class="text-lg font-bold text-gray-900 leading-tight uppercase">{{ mission.title }}</h2>
                        <span class="shrink-0 bg-blue-100 text-blue-800 text-[10px] font-semibold px-2 py-1 border border-blue-800 rounded">
                            {{ mission.areaLocation.city }}
                        </span>
                    </div>
                    
                    {# DESCRIPTION #}
                    <h3 class="font-semibold underline text-sm">Description :</h3>
                    <p class="text-gray-600 text-sm mb-6 flex-grow line-clamp-3 italic">
                        {{ mission.description }}
                    </p>

                    {# --- COMPETENCES --- #}
                    <h3 class="font-semibold underline text-sm mb-2">Compétences :</h3>
                    <div class="flex flex-wrap gap-2 mb-6">
                        {% for skill in mission.skills %}
                            <span class="text-[10px] font-bold px-2 py-1 bg-white border border-black">
                                {{ skill.nameSkill }}
                            </span>
                        {% else %}
                            <span class="text-[10px] text-gray-400 italic font-medium">Aucune compétence</span>
                        {% endfor %}
                    </div>

                    <div class="space-y-4 mt-auto">
                        {# Ligne Début #}
                        <div class="flex items-center text-[11px] font-bold text-gray-700 bg-white border border-black p-2 rounded">
                            <div class="flex items-center w-16 shrink-0 text-blue-600 uppercase tracking-tighter">
                                <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <span>Début</span>
                            </div>
                            <div class="ml-2 pl-2 border-l border-black/10 font-bold text-gray-900">
                                {{ mission.startAt|date('d/m/Y') }} <span class="text-blue-600">à</span> {{ mission.startAt|date('H:i') }}
                            </div>
                        </div>

                        {# Ligne Fin #}
                        <div class="flex items-center text-[11px] font-bold text-gray-700 bg-white border border-black p-2 rounded">
                            <div class="flex items-center w-16 shrink-0 text-red-500 uppercase tracking-tighter">
                                <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span>Fin</span>
                            </div>
                            <div class="ml-2 pl-2 border-l border-black/10 font-bold text-gray-900">
                                {{ mission.endAt|date('d/m/Y') }} <span class="text-red-500">à</span> {{ mission.endAt|date('H:i') }}
                            </div>
                        </div>

                        {# FOOTER CARD : TAUX + BOUTON #}
                        <div class="flex items-center justify-between pt-4 border-t border-black/10">
                            <div class="flex flex-col">
                                <span class="text-[10px] text-gray-400 uppercase font-bold tracking-tighter">Taux horaire</span>
                                <span class="text-xl font-bold text-gray-900">
                                    {{ mission.wageScale.hourlyRate }}€<span class="text-xs font-medium text-gray-500">/h</span>
                                </span>
                            </div>
                            <a href="{{ path('app_mission_postuler', {'id': mission.id}) }}" class="bg-[#2563EBCC] text-white border-2 border-black px-5 py-2 rounded-[4px] text-sm font-bold shadow-md hover:scale-105 transition-transform uppercase">
                                postuler
                            </a>
                        </div>
                    </div> {# Fin de space-y-4 #}
                </div> {# Fin de la carte mission #}
            {% else %}
                <div class="col-span-full py-20 text-center">
                    <p class="text-gray-500 font-bold italic text-lg">Aucune mission trouvée...</p>
                    <hr class="w-12 border-gray-300 mx-auto my-4">
                    <a href="{{ path('app_candidate_areas') }}" class="text-blue-600 font-black uppercase text-sm hover:underline">
                        + Modifier mes zones de recherche
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}