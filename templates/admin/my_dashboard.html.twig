{# templates/admin/my_dashboard.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Bienvenue sur Clean Connect{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-6">
            <div class="card card-body shadow-sm mb-4">
                <h3>Bonjour {{ app.user.firstName|default('Admin') }} !</h3>
                <p>Depuis cet espace, vous pouvez gérer les missions, les compétences et les utilisateurs.</p>
                <a href="{{ ea_url().setController('App\\Controller\\Admin\\MissionCrudController') }}" class="btn btn-primary">
                    Voir les missions
                </a>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card card-body shadow-sm border-0">
                <h4 class="mb-3"><i class="fas fa-chart-line text-primary mr-2"></i>Statistiques</h4>
                
                <div class="list-group list-group-flush">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Missions enregistrées</span>
                        <span class="badge badge-primary badge-pill">{{ count_missions }}</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Candidats inscrits</span>
                        <span class="badge badge-success badge-pill">{{ count_candidates }}</span>
                    </div>
                </div>

                <hr>
                <div class="text-muted small">
                    Dernière mise à jour : {{ "now"|date("d/m/Y H:i") }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}