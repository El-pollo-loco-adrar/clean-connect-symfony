{# Page de discussion d'une conversation #}
{% extends 'base.html.twig' %}

{% block title %}Discussion - {{ conversation.mission.title }}{% endblock %}

{% block body %}
<div class="py-10 flex justify-center h-screen bg-gray-50 dark:bg-gray-900">
    <div class="w-full max-w-3xl mx-4 flex flex-col bg-[#F3F4F6] border-4 border-black shadow-[10px_10px_0px_0px_rgba(0,0,0,1)] rounded-2xl overflow-hidden">
        
        {# HEADER DU CHAT #}
        <div class="bg-white border-b-4 border-black p-6">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-xl font-black uppercase tracking-tighter text-gray-900">
                        {{ conversation.mission.title }}
                    </h1>
                    <p class="text-sm font-bold text-blue-600">
                        Employeur : {{ conversation.employer.companyName|default('Non renseign√©') }}
                    </p>
                </div>
                <a href="{{ path('app_candidate_missions_available') }}" class="text-xs font-bold border-2 border-black px-3 py-1 hover:bg-black hover:text-white transition-colors">
                    RETOUR
                </a>
            </div>
        </div>

        {# ZONE DES MESSAGES #}
        <div class="flex-grow overflow-y-auto p-6 space-y-6 bg-[#e5e7eb]">
            {% for message in conversation.messages %}
                <div class="flex {{ message.author == app.user ? 'justify-end' : 'justify-start' }}">
                    <div class="max-w-[75%]">
                        {# Bulle de message #}
                        <div class="p-4 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] 
                            {{ message.author == app.user ? 'bg-blue-500 text-white' : 'bg-white text-gray-900' }}">
                            <p class="text-sm font-medium leading-relaxed">
                                {{ message.content }}
                            </p>
                        </div>
                        {# Heure #}
                        <p class="text-[10px] font-black mt-2 uppercase {{ message.author == app.user ? 'text-right' : 'text-left' }}">
                            {{ message.createdAt|date('H:i') }}
                        </p>
                    </div>
                </div>
            {% else %}
                <div class="text-center py-10">
                    <p class="text-gray-500 font-bold italic">Aucun message pour le moment...</p>
                </div>
            {% endfor %}
        </div>

        {# FOOTER : LE FORMULAIRE #}
        <div class="bg-white border-t-4 border-black p-4">
            {{ form_start(form, {'attr': {'class': 'flex gap-4'}}) }}
                {{ form_widget(form.content) }}
                <button type="submit" class="bg-yellow-400 border-2 border-black px-6 py-2 font-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:translate-x-1 hover:translate-y-1 hover:shadow-none transition-all uppercase">
                    Envoyer
                </button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}