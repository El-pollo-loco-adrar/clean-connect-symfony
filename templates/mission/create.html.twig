{% extends 'base.html.twig' %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-50 dark:bg-gray-900 py-10 transition-colors">
    <div class="w-full max-w-md mx-4 bg-[#F3F4F6] shadow-xl border border-black dark:border-gray-700 rounded-2xl p-8">
        
        <h1 class="text-2xl font-bold text-center text-gray-800">Créer une mission</h1>
        <hr class="border-t-2 border-black my-6 mx-auto w-1/2" />

        {{ form_start(form) }}
        
            {# Affichage des champs standards #}
        <div class="space-y-4">
            {# --- TITRE --- #}
            <div>
                <label class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 mb-2 dark:text-white-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Titre de la mission
                </label>
                {# {{ form_widget(form.title, {
                    'attr': {
                        'class': 'w-full rounded-md border-gray-300 shadow-sm'
                        }
                    }) }} #}
                {{ form_widget(form.title, {
                    'attr': {
                        'class': 'w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500'
                    }
                }) }}
            </div>

            {# --- DESCRIPTION --- #}
            <div>
                <label class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 mb-2 dark:text-white-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                    </svg>
                    Description
                </label>
                {{ form_widget(form.description, {
                    'attr': {
                        'class': 'w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500'
                        }
                    }) }}
            </div>

            <hr class="border-t-2 border-black my-6 mx-auto w-1/2" />
            
            {# --- DATES --- #}
            <p class="flex items-center justify-center gap-2 w-full text-xl font-semibold text-gray-700 mb-2">Dates : </p>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 mb-2 text-sm dark:text-white-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        Début
                    </label>
                    {{ form_widget(form.startAt, {
                        'attr': {
                            'class': 'w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 text-sm'
                            }
                        }) }}
                </div>
                <div>
                    <label class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 mb-2 text-sm dark:text-white-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        Fin
                    </label>
                    {{ form_widget(form.endAt, {
                        'attr': {
                            'class': 'w-full rounded-md border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:ring-blue-500 text-sm'
                            }
                        }) }}
                </div>
            </div>
            <hr class="border-t-2 border-black my-6 mx-auto w-1/2" />

            {# ZONE D'INTERVENTION #}
            <div>
                <label class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 mb-2 ">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    Lieu
                </label>
                {{ form_widget(form.areaLocation) }}
                
            </div>

            {# --- SECTION SKILLS (DROPDOWN GROUPÉ PAR CATÉGORIE) --- #}
            <div class="relative" id="skills-dropdown-container">
                <label class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 mb-2 dark:text-white-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
                    </svg>
                    Techniques :</label>
                
                <button type="button" id="filter-button" class="inline-flex w-full justify-between items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <span id="selected-count">Choisir les compétences</span>
                    <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                    </svg>
                </button>

                <div id="selected-skills-badges" class="flex flex-wrap gap-2 mt-3">
                    {# Les badges apparaîtront ici grâce au JS existant #}
                </div>

                <div id="filter-dropdown" class="hidden absolute left-0 z-20 mt-2 w-full origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none max-h-80 overflow-y-auto bg-white dark:bg-gray-700 ring-black ring-opacity-5">
                    <div class="py-2 px-1 text-blue-600 bg-blue-50/50 dark:bg-blue-900/30">
                        {% for category in categories %}
                            {# Titre de la catégorie #}
                            <div class="px-4 py-2 text-xs font-bold text-blue-600 uppercase tracking-wider bg-blue-50/50 mt-2 first:mt-0 dark:text-white">
                                {{ category.nameCategory }} {# Vérifie bien si c'est .name ou .nameCategory dans ton entité #}
                            </div>

                            {% for skill in category.skills %}
                                {# On cherche l'input Symfony qui correspond à l'ID de la skill #}
                                {% set skill_form = null %}
                                {% for f in form.skills %}
                                    {% if f.vars.value == skill.id %}
                                        {% set skill_form = f %}
                                    {% endif %}
                                {% endfor %}

                                {% if skill_form %}
                                    <label class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 cursor-pointer group rounded-md mx-1 transition-colors dark:text-white">
                                        {{ form_widget(skill_form, {'attr': {'class': 'h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer dark:text-white'}}) }}
                                        <span class="ml-3 group-hover:text-gray-900">
                                            {{ skill.nameSkill }}
                                        </span>
                                    </label>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            

            {# --- SALAIRE --- #}
            <div class="relative" id="wage-dropdown-container">
                <label class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 mb-2 dark:text-white-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Salaire
                </label>

                <div class="relative group">
                    <button type="button" id="wage-button" class="inline-flex justify-between w-full px-4 py-2 text-sm font-semibold text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white ring-gray-300 dark:ring-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <span id="wage-selected-label">Sélectionner un niveau</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-2 -mr-1 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M6.293 9.293a1 1 0 011.414 0L10 11.586l2.293-2.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </button>

                    <div id="wage-menu" class="hidden absolute z-30 w-full mt-2 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 p-1">
                        <div class="max-h-60 overflow-y-auto dark:bg-gray-700" id="wage-items">
                            {% for choice in form.wageScale.vars.choices %}
                                <a href="#" 
                                    data-value="{{ choice.value }}" 
                                    class="wage-item block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-700 cursor-pointer rounded-md transition-colors dark:text-white">
                                    {{ choice.label }}
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                {# Le vrai champ Symfony caché #}
                <div class="hidden">
                    {{ form_widget(form.wageScale) }}
                </div>
            </div>
        </div>

        {# Bouton submit #}
        <div class="mt-8 flex justify-center">
            {{ form_widget(form.submit, {
                'attr' : {
                    'class': 'bg-[#2563EBCC] w-fit px-6 py-3 text-white border-2 border-black rounded-[4px] font-bold shadow-lg hover:scale-105 transition-transform'
                }
                })
            }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/mission-form.js') }}"></script>
    <script>
        initMissionForm({
            titleId: "{{ form.title.vars.id }}",
            descriptionId: "{{ form.description.vars.id }}",
            startAtId: "{{ form.startAt.vars.id }}",
            endAtId: "{{ form.endAt.vars.id }}",
            wageScaleName: "{{ form.wageScale.vars.full_name }}",
            areaLocationId: "{{ form.areaLocation.vars.id }}"
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Force la réduction du conteneur global du menu */
        div.ts-dropdown {
            height: auto !important;
            min-height: 0 !important;
            max-height: 200px !important;
        }

        /* Force la réduction de la zone de contenu */
        div.ts-dropdown .ts-dropdown-content {
            padding: 0 !important;
            height: auto !important;
        }

        /* Cible TOUS les messages (loading, no-results, etc.) */
        div.ts-dropdown .loading, 
        div.ts-dropdown .no-results,
        div.ts-dropdown .create,
        div.ts-dropdown .optgroup-header {
            padding: 4px 8px !important; /* Très petit padding */
            margin: 0 !important;
            line-height: 1.2 !important;
            min-height: 20px !important; /* Écrase les 40px par défaut */
            height: auto !important;
            font-size: 12px !important;
        }

        /* Ajuste la taille de l'input de recherche quand on tape */
        .ts-wrapper.multi .ts-control > div, 
        .ts-wrapper.single .ts-control > div {
            padding: 2px !important;
        }
    </style>
{% endblock %}