{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="flex justify-center dark:bg-gray-900 py-10 transition-colors">
    <div class="w-full max-w-md mx-4 bg-[#F3F4F6] shadow-xl border border-black dark:border-gray-700 rounded-2xl p-8">

        {# ---LOGO--- #}
        <div class="flex justify-center mb-8">
            <img src="{{ asset('img/logo.png') }}" alt="Logo du site" class="h-24">
        </div>

        {# ---TITRE--- #}
        <div class="flex justify-center border-2 border-black bg-[#3B82F6] bg-opacity-15 dark:border-gray-600 dark:bg-gray-700 rounded-lg p-2 mb-12">
            <h1 class="text-3xl font-semibold dark:text-white ">Inscription</h1>
        </div>

        {% for flash_error in app.flashes('verify_email_error') %}
        <div class="mb-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded text-sm" role="alert">
            {{ flash_error }}
        </div>
        {% endfor %}

        {{ form_start(registrationForm, {
            'attr': {
                'class': 'space-y-4'}
            }) 
        }}

            <div class="space-y-4">

                {# ---CANDIDAT/RECRUTEUR--- #}
                <div class="mb-4">
                    <label class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 mb-2">
                        Je suis :
                    </label>
                    <div class="flex justify-center gap-8 bg-[#3B82F6] bg-opacity-15 p-4 rounded-lg border border-black dark:border-gray-600 dark:bg-gray-700">
                        {% for child in registrationForm.user_type %}
                            <label class="flex items-center gap-2 cursor-pointer group">
                                {{ form_widget(child, {'attr': {'class': 'w-4 h-4 text-blue-600 focus:ring-blue-500 border-gray-300'}}) }}
                                <span class="text-sm font-medium text-gray-700 dark:text-gray-200 group-hover:text-blue-600 transition-colors">
                                    {{ child.vars.label }}
                                </span>
                            </label>
                        {% endfor %}
                    </div>
                    <div class="text-red-500 text-xs mt-1 text-center">{{ form_errors(registrationForm.user_type) }}</div>
                </div>

                {# --- EMAIL --- #}
                <label class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 mb-2 ">Mon Email</label>
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'w-full px-4 py-2 rounded-lg border border-black bg-[#3B82F6] bg-opacity-15 dark:border-gray-600 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 outline-none transition',
                        'placeholder': 'nom@exemple.com'
                    }
                }) }}
                <div class="text-red-500 text-xs mt-1">{{ form_errors(registrationForm.email) }}</div>
            
                {# --- MOT DE PASSE --- #}
                <label class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 mb-2 dark:text-white-200">Mot de passe</label>
                {{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'w-full px-4 py-2 rounded-lg border border-black bg-[#3B82F6] bg-opacity-15 dark:border-gray-600 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 outline-none transition',
                        'placeholder': '••••••••'
                    }
                }) }}
                <div class="text-red-500 text-xs mt-1">{{ form_errors(registrationForm.plainPassword) }}</div>
            

                {# --- CONDITIONS --- #}
                <div class="flex items-center gap-2">
                    {{ form_widget(registrationForm.agreeTerms, {
                        'attr': {'class': 'w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500'}
                    }) }}
                    <label class="text-sm text-black-600 dark:text-black">
                        J'accepte les <a href="#" class="text-blue-600 hover:underline">conditions d'utilisation</a>
                    </label>
                </div>
                <div class="text-red-500 text-xs">{{ form_errors(registrationForm.agreeTerms) }}</div>
            </div>

            {# --- BOUTON SUBMIT --- #}
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 text-white font-bold py-3 rounded-lg shadow-lg dark:shadow-blue-900/20 transform transition hover:scale-[1.02] active:scale-95">
                S'inscrire
            </button>

        {{ form_end(registrationForm) }}

        <p class="flex items-center justify-center gap-2 w-full font-semibold text-gray-700 m-4 dark:text-white-200">
            J'ai déjà un compte ? <a href="{{ path('app_login') }}" class="text-blue-600 font-semibold hover:underline">Je me connecte</a>
        </p>
    </div>
</div>
{% endblock %}
